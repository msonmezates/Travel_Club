<% include ../partials/header %>

<div class="container">
  <h2 class="text-center">Edit <%= travelPlace.name %></h2>
    <div class="row">
      <div style="width:30%; margin:30px auto;">
          <form action="/travelplaces/<%= travelPlace._id %>/?_method=PUT" method="POST">
              <div class="form-group">
                <input class="form-control" type="text"  name="travelPlace[name]" value="<%= travelPlace.name %>">
              </div>
              <div class="form-group">
                <input class="form-control" type="text" name="travelPlace[image]" value="<%= travelPlace.image %>">  
              </div>
              <div class="form-group">
                <input class="form-control" type="text" name="travelPlace[description]" value="<%= travelPlace.description %>">
              </div>
              <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
              </div>
          </form>
      </div>
    </div>
    <div style="text-align:center">
      <a href="/travelplaces">Go back</a>
    </div>
</div>

<% include ../partials/footer %>