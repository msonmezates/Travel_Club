<% include ../partials/header %>


<div class="container">
  <header class="jumbotron">
    <h1>Welcome to Travel Club Page</h1>
    <p>View all the places</p>
    <p class="lead">
      <a class="btn btn-primary btn-lg" href="/travelplaces/new" role="button">
        Add New Place
      </a>
    </p>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Our Most Popular Places</h3>
    </div>
  </div>

  <div class="row d-flex flex-wrap">
    <% travelplaces.forEach(travelplace => { %>
      <div class="col-md-3 col-sm-6">
        <div class="card">
          <img class="card-img-top" src="<%= travelplace.image %>" />
          <div class="text-center pb-2">
            <h4 class="card-title"><%= travelplace.name %></h4>
            <a class="btn btn-primary" href="/travelplaces/<%= travelplace._id %>">More Info</a>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<% include ../partials/footer %>