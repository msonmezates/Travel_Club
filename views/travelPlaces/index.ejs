<% include ../partials/header %>


<div class="container">
  <header class="jumbotron">
    <h1>Welcome to Travel Club Page</h1>
    <p>View all the places</p>
    <p class="lead">
      <a class="btn btn-primary btn-lg" href="/travelplaces/new" role="button">
        Add New Place
      </a>
    </p>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Our Most Popular Places!</h3>
    </div>
  </div>

  <div class="row" style="display:flex; flex-wrap:wrap;">
    <% travelplaces.forEach(travelplace => { %>
      <div class="col-md-3 col-sm-6">
        <div class="img-thumbnail">
            <img src="<%= travelplace.image %>" />
            <div class="caption text-center">
              <h4><%= travelplace.name %></h4>
            </div>
            <p class="text-center">
              <a href="/travelplaces/<%= travelplace._id %>" class="btn btn-primary">More Info</a>
            </p>
        </div>
      </div>
    <% }); %> 
  </div>
</div>

<% include ../partials/footer %>